<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newlysizecity"
    tools:context="prototype.android.eventsapplication.SelectLocation">


    <android.support.v7.widget.CardView
        android:layout_width="300dp"

        android:layout_height="100dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="80dp"
        android:onClick="goToUk"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardCornerRadius="10dp">


        <TextView
            style="@style/headingFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="London"
            android:textAlignment="center" />

        <View
            android:id="@+id/divider_between_radio_buttons"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@android:color/white">

        </View>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="100dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:onClick="goToAmsterdam"
        card_view:cardBackgroundColor="@color/yellow"
        card_view:cardCornerRadius="10dp">


        <TextView
            style="@style/headingFont"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="AmsterDam"
            android:textAlignment="center" />

        <View
            android:id="@+id/divider_between_text"
            android:layout_width="150dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@android:color/white">

        </View>
    </android.support.v7.widget.CardView>


</RelativeLayout>
