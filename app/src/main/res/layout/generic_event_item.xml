<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/event_image_card"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_centerHorizontal="true"

       >


        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"

            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/event_image_card"
        android:layout_width="match_parent"

        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        card_view:cardBackgroundColor="@android:color/transparent"
        >



        <TextView
            android:id="@+id/event_name"
            style="@style/eventName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Web.com Tour: Digital Ally Open"
            android:textAlignment="center" />

        <View
            android:id="@+id/divider_between_radio_buttons"
            android:layout_width="380dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:background="@color/cardview_shadow_start_color">

        </View>

        <ImageView
            android:id="@+id/calandericon"
            android:src="@drawable/cal"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="97dp"
            android:layout_gravity="center_horizontal"


            />

        <TextView
            android:id="@+id/event_date"
            style="@style/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="74dp"
            android:text="Monday 15TH"
             />

    </android.support.v7.widget.CardView>

</RelativeLayout>
